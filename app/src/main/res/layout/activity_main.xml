<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="#d4d4d4"
        app:civ_border_color="#707070"
        app:civ_border_width="1dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:minLines="2"
        android:text="@string/student_name"
        android:textAlignment="center"
        app:fontFamily="@font/cabin_sketch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintVertical_bias="0.01" />



    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/bell"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="452dp" />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/blackboard"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="452dp" />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/book"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="354dp" />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/bell"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="354dp" />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/boss"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="354dp" />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/library"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="236dp" />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/schoolmaterial"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="452dp" />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/earthglobe"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="236dp" />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/exam"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="236dp" />




    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="200dp" />


</android.support.constraint.ConstraintLayout>